.side-bar
  .user-name
    .user-name__top-items
      .user-name__top-items__name
        = current_user.name
      .user-name__top-items__icons
        = link_to new_group_path, class: "user-name__top-items__icons--edit" do
          = icon('fa', 'edit')
        = link_to edit_user_path(current_user), class: "user-name__top-items__icons--cog" do
          = icon('fa', 'cog')


  .group-list
    - current_user.groups.each do |group|
      .group-list__group
        = link_to group_messages_path(group) do
          .group-list__group__name
            = group.name
          .group-list__group__new-message
