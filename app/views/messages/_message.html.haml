.message-list__title
  .message-list__title__name
    = message.user.name
  .message-list__title__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.message-list__text
  - if message.content.present?
    %p.message-list__text__content
      = message.content
  = image_tag message.image.url, class: 'message-list__text__content' if message.image.present?  